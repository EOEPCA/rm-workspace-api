{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "KUBECONFIG": "${env:HOME}/.kube/config-eoepca-demo",
                "UI_MODE": "ui",
                "FRONTEND_URL": "/ui"
            },
            "args": [
                "workspace_api:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "5000",
                "--log-level",
                "info"
            ]
        }
    ]
}

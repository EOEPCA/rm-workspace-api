{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "KUBECONFIG": "${env:HOME}/.kube/config-kalpha",
                "PREFIX_FOR_NAME": "s",
                "AWS_REGION": "eu-nl",
                "AWS_ENDPOINT_URL": "https://obs.eu-nl.otc.t-systems.com",
                "UI_MODE": "ui"
            },
            "args": [
                "workspace_api:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8080",
                "--log-level",
                "info"
            ]
        }
    ]
}
